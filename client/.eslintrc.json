{
  "env": {
    "browser": true,
    "es2021": true,
    "jest/globals": true
  },
  "globals": {
    "process": true,
    "renderTree": true,
    "global": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended", "prettier"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react", "prettier"],
  "rules": {
    "prettier/prettier": ["error"],
    "quotes": ["error", "double"],
    "no-unused-vars": 1
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "ignorePatterns": ["node_modules/"]
}
