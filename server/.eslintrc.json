{
  "env": {
    "node": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "prettier"],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "requireConfigFile": false
  },
  "rules": {
    "prettier/prettier": ["error"],
    "quotes": ["error", "double"],
    "no-unused-vars": 1
  },
  "ignorePatterns": ["node_modules/"]
}
